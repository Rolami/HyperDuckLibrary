@model HyperDuckLibrary.Models.BorrowList

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BorrowList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BorrowId" />
            <div class="form-group">
                <label asp-for="Fk_BookId" class="control-label">Book Title</label>
                <select asp-for="Fk_BookId" class="form-control" asp-items="ViewBag.Fk_BookId"></select>
                <span asp-validation-for="Fk_BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fk_CustomerId" class="control-label">Borrower</label>
                <select asp-for="Customers.FirstMidName" class="form-control" asp-items="ViewBag.Fk_CustomerId"></select>
                <span asp-validation-for="Customers.FirstMidName" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="Books.BorrowedDate" class="control-label"></label>
                <input asp-for="Books.BorrowedDate" class="form-control" />
                <span asp-validation-for="Books.BorrowedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.ReturnedDate" class="control-label"></label>
                <input asp-for="Books.ReturnedDate" class="form-control" />
                <span asp-validation-for="Books.ReturnedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.IsReturned" class="control-label"></label>
                <input asp-for="Books.IsReturned" class="form-control" />
                <span asp-validation-for="Books.IsReturned" class="checkbox"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
